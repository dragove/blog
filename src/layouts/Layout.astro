---
import Nav from "../components/Nav.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>鸽子窝{title ? "-" + title : ""}</title>
	</head>
	<body>
		<Nav />
		<div class="container">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	@font-face {
		font-family: HWfont;
		src: url("/fonts/HarmonyOSHans-Regular.woff2");
	}
	body {
		line-height: 1.8;
		color: #c0c5ce;
		background-color: #24282f;
	}
	.container {
		max-width: 768px;
		margin: 0 auto;
		padding-bottom: 50px;
	}
	hr {
		color: #80858e;
	}
	header {
		margin-top: 30px;
		margin-bottom: 32px;
		text-align: center;
	}
	header.title {
		margin: 0;
		line-height: 60px;
		color: #eeeeee;
		position: relative;
	}
	h1 {
		margin: 0;
		line-height: 60px;
		color: #eeeeee;
		position: relative;
	}
	a {
		color: #ff9999;
		text-decoration: none;
		margin: 0 5px;
	}
	a:hover {
		color: #ff6666;
		text-shadow: 2px 2px 2px black;
		transition: 0.5s;
	}
	table {
		border-collapse: collapse;

		th {
			padding: 4px 8px;
			border: 1px solid #40464d;
		}

		td {
			padding: 4px 8px;
			border: 1px solid #40464d;
		}

		tr:nth-child(2n) {
			background-color: #363b42;
		}
	}
	.astro-code {
		padding: 16px;
		font-size: 16px;
		border-radius: 8px;
	}

	blockquote {
		margin: 0;
		padding-left: 16px;
		border-left: 5px solid #30363d;
	}
</style>
